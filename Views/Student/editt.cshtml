@{
}


@model Student
 
<form method="post" action="/Student/SaveEdit" enctype="multipart/form-data">
    <input type="hidden" name="ssn" value="@Model?.ssn" />
    <div class="mb-3">
        <label for="stdname" class="form-label">Student Name</label>
        <input type="text" class="form-control" id="stdname" name="Name" value="@Model.Name">

    </div>
    <div class="mb-3">
        <label for="stdage" class="form-label">Student Age</label>
        <input type="number" class="form-control" id="stdage" name="Age" value="@Model.Age">
    </div>
    <div class="mb-3">
        <label for="stdaddress" class="form-label">Student Address</label>
        <input type="text" class="form-control" id="stdaddress" name="Address" value="@Model.Address">

    </div>
    <div class="mb-3">
        <label for="stdimage" class="form-label">Student Image</label>
        <input type="text" class="form-control" id="stdimage" name="Image" value="@Model.Image">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>