
@model Student

<form action="/Student/AddNew" method="post">
    <div class="mb-3">
        <label for="NameInput" class="form-label">Student Name</label>
        <input type="text" class="form-control" id="NameInput" name="Name">
    </div>

    <div class="mb-3">
        <label for="AgeInput" class="form-label">Student Age</label>
        <input type="number" class="form-control" id="AgeInput" name="Age">
    </div>
    <div class="mb-3">
        <label for="AddressInput" class="form-label">Student Address</label>
        <input type="text" class="form-control" id="AddressInput" name="Address">
    </div>

    <div class="mb-3">
        <label for="ImageInput" class="form-label">Student Image</label>
        <input type="file" class="form-control" id="ImageInput" name="Image">
    </div>
    <div class="mb-3">
        <label asp-for="DepartmentId" class="form-label">Student Department</label>
        <select asp-for="DepartmentId" class="form-control">
            @foreach (Department d in ViewBag.department)
            {
                <option value="@d.ID">@d.Name</option>
            }

        </select>
     
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>