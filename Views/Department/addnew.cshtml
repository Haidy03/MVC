

@model Department
@{
    ViewData["Title"] = "addnew";
}

<h1>add new Department</h1>

<div asp-validation-summary="All" class="text-danger"></div>           @*  Must be above the form not inside its tag  *@

<form asp-controller="Department" asp-action="SaveNew" method="post">
    
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Department Name</label>
        <input class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Manager" class="form-label">Department Manager Name</label>
        <input class="form-control" asp-for="Manager">
        <span asp-validation-for="Manager" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Location" class="form-label">Department Location</label>
        <input class="form-control" asp-for="Location">
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
   


    <button type="submit" class="btn btn-primary">Submit</button>
</form>
